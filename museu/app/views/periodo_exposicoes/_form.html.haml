= simple_form_for(@periodo_exposicao) do |f|
  = f.error_notification

  .form-inputs.fa
  %br
    = f.input :data_inicio, as: :string
    %br
    = f.input :data_fim, as: :string
    %br
    = f.association :museuLocal, label_method: :nome, label: 'Museu'
    %br
    = f.association :exposicao, label_method: :nome, label: 'Exposição'
    %br
    %br

  .form-actions
    = f.button :submit, 'Salvar',:class => "btn btn-info"
